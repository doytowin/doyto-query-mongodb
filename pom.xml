<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>win.doyto</groupId>
        <artifactId>doyto-oss-parent</artifactId>
        <version>5</version>
    </parent>

    <artifactId>doyto-query-mongodb-repo</artifactId>
    <name>DoytoQueryMongoDBRepository</name>
    <packaging>pom</packaging>
    <version>2.0.0-SNAPSHOT</version>
    <url>https://query.doyto.win/</url>

    <properties>
        <spring-boot.version>3.3.1</spring-boot.version>
        <embedded-mongo.version>4.16.2</embedded-mongo.version>
        <doyto-query.version>2.0.0</doyto-query.version>

        <java.version>17</java.version>
        <sourceDirectory>src/main/java</sourceDirectory>
        <maven.deploy.skip>true</maven.deploy.skip>

        <jacoco.destFile>${user.dir}/target/jacoco.exec</jacoco.destFile>
        <jacoco.dataFile>${user.dir}/target/jacoco.exec</jacoco.dataFile>
    </properties>

    <modules>
        <module>doyto-query-mongodb</module>
        <module>doyto-query-mongodb-spring-tx</module>
    </modules>

    <dependencies>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>de.flapdoodle.embed</groupId>
            <artifactId>de.flapdoodle.embed.mongo</artifactId>
            <version>${embedded-mongo.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-dependencies</artifactId>
                <version>${spring-boot.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <sourceDirectory>${sourceDirectory}</sourceDirectory>
        <testResources>
            <testResource>
                <directory>./src/test/java</directory>
                <filtering>true</filtering>
                <includes>
                    <include>**/*.json</include>
                </includes>
            </testResource>
            <testResource>
                <directory>./src/test/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>**/*.yml</include>
                    <include>**/*.sql</include>
                    <include>**/*.xml</include>
                    <include>**/*.json</include>
                    <include>**/*.properties</include>
                </includes>
            </testResource>
        </testResources>
        <plugins>
            <!-- 更新pom版本号-->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>flatten-maven-plugin</artifactId>
                <version>1.6.0</version>
                <configuration>
                    <updatePomFile>true</updatePomFile>
                    <flattenMode>ossrh</flattenMode>
                    <flattenedPomFilename>target/${project.artifactId}.pom.xml</flattenedPomFilename>
                </configuration>
                <executions>
                    <execution>
                        <id>flatten</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>flatten</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>flatten.clean</id>
                        <phase>clean</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <scm>
        <tag>main</tag>
        <url>https://github.com/doytowin/doyto-query-mongodb</url>
        <connection>scm:git:https://github.com/doytowin/doyto-query-mongodb.git</connection>
        <developerConnection>scm:git:https://github.com/doytowin/doyto-query-mongodb.git</developerConnection>
    </scm>
</project>